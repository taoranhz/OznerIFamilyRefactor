<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- background -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/MyCenter_ProgressBarBg" />
            <corners android:radius="25dp" />
        </shape>
    </item>

    <!-- progress -->
    <item android:id="@android:id/progress">
        <clip>

            <shape>
                <corners android:radius="25dp" />
                <gradient
                    android:endColor="@color/MyCenter_ProgressEnd"
                    android:startColor="@color/MyCenter_ProgressStart"
                    android:type="linear" />
            </shape>
        </clip>
    </item>

</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2">

        <TableRow
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_device_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:src="@drawable/device_icon_air_ver"/>

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/air_purifier_ver"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <!--<TextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:minWidth="10dp"-->
            <!--android:layout_weight="1" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_connection_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/connect_bluetooth_on"/>

                <TextView
                    android:id="@+id/tv_connection_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/wifi_connection"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/right"/>

        </TableRow>
    </TableLayout>
</LinearLayout>
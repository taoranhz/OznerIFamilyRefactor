<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llay_deviceConnectTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_deviceConnectIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/data_loading"/>

        <TextView
            android:id="@+id/tv_deviceConnectTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="adsfafds"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_centerInParent="true">

        <com.ozner.cup.UIView.TdsDetailProgress
            android:id="@+id/tdsDetailProgress"
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tdsTitle"
                android:textColor="@color/detail_textblue"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tdsState"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_tdsState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/state_null"
                    android:textColor="@color/detail_textblue"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tdsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textColor="@color/detail_textblue"
                android:textSize="45dp"/>

            <TextView
                android:id="@+id/tv_tdsRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/detail_textblue"
                android:textSize="20dp"
                android:visibility="gone"/>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
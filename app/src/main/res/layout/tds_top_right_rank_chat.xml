<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/friend_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/friend_rank"
            android:textColor="@color/detail_textblue"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_tdsRankValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/friend_rank"
            android:layout_below="@+id/friend_rank"
            android:includeFontPadding="false"
            android:text="0"
            android:textColor="@color/detail_textblue"
            android:textSize="45dp"/>

        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/tv_tdsRankValue"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_tdsRankValue"
            android:baselineAlignBottom="true"
            android:paddingBottom="5dp"
            android:src="@drawable/trophy"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_chat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_unfill_detail_text_bg"
            android:drawableLeft="@drawable/msg"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="@string/chat"
            android:textColor="@color/detail_textblue"
            android:textSize="18dp"/>
    </LinearLayout>
</LinearLayout>
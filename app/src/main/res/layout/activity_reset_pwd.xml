<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ozner.cup.LoginWelcom.View.ResetPwdActivity">

    <RelativeLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/ib_back"
            android:padding="20dp"
            android:src="@drawable/back"/>

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/login_icon"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:orientation="vertical"
            android:paddingBottom="9.5dp"
            android:paddingTop="9.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_none"
                    android:ellipsize="start"
                    android:hint="@string/email"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/light_black"
                    android:textSize="14dp"/>


            </LinearLayout>


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="9.5dp"
                android:background="@color/theme_blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:orientation="vertical"
            android:paddingBottom="9.5dp"
            android:paddingTop="9.5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_verCode"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_none"
                    android:hint="@string/verify_code"
                    android:paddingLeft="5dp"
                    android:textColor="@color/light_black"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tv_verifyCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_verify_code"
                    android:textColor="@color/theme_blue"/>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="9.5dp"
                android:background="@color/theme_blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:orientation="vertical"
            android:paddingBottom="9.5dp"
            android:paddingTop="9.5dp">

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/border_none"
                android:hint="@string/newpassword"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textColor="@color/light_black"
                android:textSize="14dp"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="9.5dp"
                android:background="@color/theme_blue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:orientation="vertical"
            android:paddingBottom="9.5dp"
            android:paddingTop="9.5dp">

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/border_none"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textColor="@color/light_black"
                android:textSize="14dp"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="9.5dp"
                android:background="@color/theme_blue"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_press_blue_selector"
            android:onClick="modifyPwd"
            android:elevation="0dp"
            android:text="@string/resetpassword"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17dp"/>

    </LinearLayout>

</LinearLayout>
